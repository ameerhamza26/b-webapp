<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
                <div class="banner">
                    <div class="container">
                        <a href="/causes" class="float-left banner-link">
                            <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                        <a href="/causeedit" class="float-right banner-link">EDIT CAUSE</a>
                        <div class="py-5 text-center">
                            <h2 class="lead">Put an end to Immigration-related Crimes in Burma</h2>
                        </div>
                    </div>
                </div>
                <div class="container full-page">

                    <% include partials/sidemenu %>

                        <div class="col-md-8 order-md-2">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-12">
                                    <h4 class="mb-0 txt-red">Create Cause</h4>
                                </div>
                            </div>

                            <form id="add-cause-form" class="needs-validation" method="post" action="/create/cause" onsubmit="return validateCauseForm()"
                                enctype="multipart/form-data" novalidate="">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>

                                        <div class="form-group">
                                            <label for="first_name" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" name="title" maxlength="99" placeholder="Title" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="last_name" class="col-md-3 control-label">Description</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" maxlength="1999" name="description" placeholder="Description">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="mob_no" class="col-md-3 control-label">Image</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="file" name="uploaded_image" accept="" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                <button id="btn-signup" type="submit" class="btn btn-primary">
                                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                                            </div>
                                        </div>

                            </form>




                        </div>

                </div>
            </div>
            <% include partials/footer %>
    </body>