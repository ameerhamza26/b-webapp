<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
                <div class="banner">
                    <div class="container">
                        <a href="/causes" class="float-left banner-link">
                            <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                        <a href="/causeedit" class="float-right banner-link">EDIT CAUSE</a>
                        <div class="py-5 text-center">
                            <h2 class="lead">Put an end to Immigration-related Crimes in Burma</h2>
                        </div>
                    </div>
                </div>
                <div class="container full-page">

                    <% include partials/sidemenu %>

                        <div class="col-md-8 order-md-2">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-12">
                                    <h4 class="mb-0 txt-red">Create Event</h4>
                                </div>
                            </div>
                            <form id="add-event-form" onsubmit="return validateEventForm()" class="form-horizontal" role="form" method="post" action="/create/event">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <div id="signupalert" style="display:none" class="alert alert-danger">
                                            <p>Error:</p>
                                            <span></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" maxlength="99" name="title" placeholder="Title">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Select cause</label>
                                            <div class="col-md-9">
                                                <select class="form-control" name="cause" id="drpdwn">
                                                    <option value="">Select Cause</option>
                                                    <%for(var i=0;i< data.length;i++){ %>
                                                        <option value='<%= data[i].ID %>'>
                                                            <%=data[i].Title%>
                                                        </option>
                                                        <% }%>



                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="location" class="col-md-3 control-label">Location</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" maxlength="99" name="location" placeholder="Location">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="start_date" class="col-md-3 control-label">Start Date</label>
                                            <div class="col-md-9">
                                                <input type="date" class="form-control" name="start_date" placeholder="Start date">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="end_date" class="col-md-3 control-label">End Date</label>
                                            <div class="col-md-9">
                                                <input type="date" class="form-control" name="end_date" placeholder="End date">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="notes" class="col-md-3 control-label">Notes</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" maxlength="1999" name="notes" placeholder="Notes"></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                <button id="btn-signup" type="submit" class="btn btn-primary">
                                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                                            </div>
                                        </div>
                            </form>
                        </div>
                </div>
            </div>
            <% include partials/footer %>
    </body>