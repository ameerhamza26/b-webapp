<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
                <div class="banner">
                        <div class="container">
                            <a href="/home" class="float-left banner-link">
                                <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                            <a href="/causes/edit/<%=causes[0].ID%>" class="float-right banner-link">EDIT CAUSE</a>
                            <div class="py-5 text-center">
                                <h2 class="lead"><%=causes[0].Title%></h2>
                            </div>
                        </div>
                    </div>
                    <div class="container full-page">
                    <% var selectedCauseId= causes[0].ID; %>
                    <% include partials/sidemenu %>

                    
                    <input id="selectedCause" type="hidden" value="<%=causes[0].ID%>"/>

                        <div class="col-md-8 order-md-2">
                            <h4 class="mb-3">Edit Survey</h4>
                            <div class="form-horizontal">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <div id="signupalert" style="display:none" class="alert alert-danger">
                                            <p>Error:</p>
                                            <span></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input id="survey-title-text" type="text" class="form-control" name="title" placeholder="Title" value="<%=data[0].Title%>">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Select cause</label>
                                            <div class="col-md-9">
                                                <select class="form-control" name="cause" id="survey-cause-id" value="<%=data[0].CauseId%>">
                                                    <option value="">Select Cause</option>
                                                    <%for(var i=0;i< causes.length;i++){ %>
                                                        <%if (causes[i].ID == data[0].CauseId) { %>
                                                            <option value='<%= causes[i].ID %>' selected>
                                                                <% } else {  %>

                                                                    <option value='<%= causes[i].ID %>' />
                                                                    <% } %>
                                                                        <%=causes[i].Title%>
                                                            </option>
                                                            <% }%>



                                                </select>
                                            </div>
                                        </div>

