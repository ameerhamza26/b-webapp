<% include partials/head %>
<body>
    <% include partials/header %>
    
    <div class="container full-page">
        <div class="py-5 text-center">
            <h2 class="lead mt-5">Welcome to Burma cause management</h2>
        </div>

        <% include partials/sidemenu %>

        <div class="col-md-8 order-md-2">
            <h4 class="mb-3">Edit Survey</h4>
            <div class="form-horizontal" >
                <% if (message.length > 0) { %>
                    <div class="alert alert-success col-sm-12">
                        <%= message %>
                    </div>
                    <% } %>
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-md-3 control-label">Title</label>
                            <div class="col-md-9">
                                <input id="survey-title-text" type="text" class="form-control" name="title" placeholder="Title" value="<%=data[0].Title%>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="title" class="col-md-3 control-label">Select cause</label>
                            <div class="col-md-9">
                                <select class="form-control" name="cause" id="survey-cause-id" value="<%=data[0].CauseId%>">
                                    <option value="">Select Cause</option>
                                    <%for(var i=0;i< causes.length;i++){ %>
                                        <%if (causes[i].ID == data[0].CauseId) { %>
                                            <option value='<%= causes[i].ID %>' selected />
                                            <% } else {  %>
                                                
                                                <option value='<%= causes[i].ID %>' />
                                            <% } %>
                                        <%=causes[i].Title%>
                                            </option>
                                            <% }%>

                                            

                                </select>
                            </div>
                        </div>

<!-- 
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button id="survey-submit" type="submit" class="btn btn-primary">
                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                            </div>
                        </div> -->
                    </div>
                    <div id="survey-question-div" style="display: none;">

                    </div>
                    <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button id="survey-submit-edit" type="submit" class="btn btn-primary">
                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                            </div>
                    </div>
        </div>
    </div>

    <% include partials/footer %>
</body>