<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
                    <div class="container full-page-outer mt-5 pt-5">
                            <!-- CArd -->
                            <div class="row align-items-center mb-3">
                                    <div class="col-md-8">
                                        <h4 class="mb-0 txt-red">Causes</h4>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="/create/cause" class="btn btn-primary mb-2m float-right">Create New</a>
                                    </div>
                                </div>
                            <div class="row align-items-start">
                                    <% for(var i=0; i<data.length; i++) { %>
                                            <div class="col-md-4 pb-4" style="position:relative;">
                                                    
                                                
                                                    
                                                    <div class="card">
                                                            <button onclick="deleteCause(<%=data[i].ID%>);" type="button" class="btn btn-outline-light">Delete this cause</button>
                                                            <a href="/events/<%=data[i].ID%>"> 
                                                            <img class="card-img-top" src="/images/upload_images/<%=data[i].Image%>" alt="<%=data[i].Title%>">
                                                        <a href="/events/<%=data[i].ID%>">
                                                            <div class="card-body">
                                                            <h5 class="card-title txt-red"> <%=data[i].Title%></h5>
                                                             <p class="card-text">
                                                                     <%=data[i].Description%>
                                                             </p>
                                                         </div>
                                                        </a> 
                                                    </div>
                                                </a>
                                               
                                            </div>
                                    <% } %>  
                            </div>
                            <!-- Card -->
                        </div>


            </div>
            <% include partials/footer %>

    </body>