<% include partials/head %>
<body>
    <% include partials/header %>
    
    <div class="container">
        <div class="py-5 text-center">
            <p class="lead mt-5">Welcome to Burma cause management</p>
        </div>

        <% include partials/sidemenu %>

        <div class="col-md-8 order-md-2">
            <h4 class="mb-3">Burma Causes</h4>
            <a href="/create/cause" class="btn btn-primary btn-lg" type="button">Add new</a>
            <div class="list-group">
                <% for(var i=0; i<data.length; i++) { %>
                    <a href="/causes/edit/<%=data[i].ID%>" class="list-group-item">
                        <h4 class="list-group-item-heading"><%=data[i].Title%></h4>
                        
                        <p class="list-group-item-text"><%=data[i].Description%></p>
                        <img src="/images/upload_images/<%=data[i].Image%>" class="img-thumbnail" alt="<%=data[i].Title%>">
                    </a>
                <% } %>
            </div>
        </div>

    </div>

    <% include partials/footer %>

</body>


