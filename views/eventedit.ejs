<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
            <div class="banner">
                    <div class="container">
                        <a href="/home" class="float-left banner-link">
                            <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                        <a href="/causes/edit/<%=causes[0].ID%>" class="float-right banner-link">EDIT CAUSE</a>
                        <div class="py-5 text-center">
                            <h2 class="lead"><%=causes[0].Title%></h2>
                        </div>
                    </div>
                </div>
                <div class="container full-page">
                        <% var selectedCauseId= causes[0].ID; %>
                    <% include partials/sidemenu %>

                        <div class="col-md-8 order-md-2">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-12">
                                    <h4 class="mb-0 txt-red">Edit Event</h4>
                                </div>
                            </div>
                            <form id="add-event-form" onsubmit="return validateEventForm()" class="form-horizontal" role="form" method="post" action="/events/edit/<%=data[0].ID%>/<%= causes[0].ID %>">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <div id="signupalert" style="display:none" class="alert alert-danger">
                                            <p>Error:</p>
                                            <span></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" maxlength="99" name="title" placeholder="Title" value="<%=data[0].Title%>">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Cause</label>
                                            <div class="col-md-9">
                                                <select class="form-control" name="cause" id="drpdwn" value="<%= data[0].CauseId %>" readonly>
                                                    <option value="">Select Cause</option>
                                                    <%for(var i=0;i< causes.length;i++){ %>
                                                        <%if (causes[i].ID == data[0].CauseId) { %>
                                                            <option value='<%= causes[i].ID %>' selected>
                                                                <% } else {  %>

                                                                    <option value='<%= causes[i].ID %>' />
                                                                    <% } %>
                                                                        <%=causes[i].Title%>
                                                            </option>
                                                            <% }%>



                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="location" class="col-md-3 control-label">Location</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" maxlength="99" name="location" placeholder="Location" value="<%=data[0].Location%>">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="start_date" class="col-md-3 control-label">Start Date</label>
                                            <div class="col-md-9">
                                                <input type="date" class="form-control" name="start_date" placeholder="Start date" value="<%= moment(data[0].StartDate).format( 'YYYY-MM-DD') %>">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="end_date" class="col-md-3 control-label">End Date</label>
                                            <div class="col-md-9">
                                                <input type="date" class="form-control" name="end_date" placeholder="End date" value="<%= moment(data[0].EndDate).format( 'YYYY-MM-DD') %>">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="notes" class="col-md-3 control-label">Notes</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="notes" maxlength="1999" placeholder="Notes"><%=data[0].Notes%></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                <button id="btn-signup" type="submit" class="btn btn-primary">
                                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                                            </div>
                                        </div>
                            </form>
                        </div>
                </div>
            </div>
            <% include partials/footer %>
    </body>