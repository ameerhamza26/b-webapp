<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
                <div class="banner">
                    <div class="container">
                        <a href="/causes" class="float-left banner-link">
                            <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                        <a href="/causeedit" class="float-right banner-link">EDIT CAUSE</a>
                        <div class="py-5 text-center">
                            <h2 class="lead">Put an end to Immigration-related Crimes in Burma</h2>
                        </div>
                    </div>
                </div>
                <div class="container full-page">

                    <% include partials/sidemenu %>

                        <div class="col-md-8 order-md-2">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-12">
                                    <h4 class="mb-0 txt-red">Add Resources</h4>
                                </div>
                            </div>
                            <form id="add-resources-form" onsubmit="return validateResourcesForm()" class="form-horizontal" role="form" method="post"
                                action="/create/resources">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>

                                        <div id="signupalert" style="display:none" class="alert alert-danger">
                                            <p>Error:</p>
                                            <span></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="first_name" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input type="text" maxlength="99" class="form-control" name="title" placeholder="Title">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Select cause</label>
                                            <div class="col-md-9">
                                                <select class="form-control" name="cause" id="drpdwn">
                                                    <option value="">Select Cause</option>
                                                    <%for(var i=0;i< data.length;i++){ %>
                                                        <option value='<%= data[i].ID %>'>
                                                            <%=data[i].Title%>
                                                        </option>
                                                        <% }%>



                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="last_name" class="col-md-3 control-label">Description</label>
                                            <div class="col-md-9">
                                                <input type="text" maxlength="1999" class="form-control" name="description" placeholder="Description">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="last_name" class="col-md-3 control-label">Add reference urls</label>
                                            <div class="col-md-9">
                                                <input type="url" class="form-control mb-2" name="url1" placeholder="Reference url 1 e.g http://www.example.com">
                                            </div>
                                            <div class="col-md-9">
                                                <input type="url" class="form-control mb-2" name="url2" placeholder="Reference url 2 e.g http://www.example.com">
                                            </div>
                                            <div class="col-md-9">
                                                <input type="url" class="form-control mb-2" name="url3" placeholder="Reference url 3 e.g http://www.example.com">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                <button id="btn-signup" type="submit" class="btn btn-primary">
                                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                                            </div>
                                        </div>
                            </form>
                        </div>
                </div>
            </div>
            <% include partials/footer %>
    </body>