<% include partials/head %>
<body>
    <% include partials/header %>
    
    <div class="container full-page">
        <div class="py-5 text-center">
            <h2 class="lead mt-5">Welcome to Burma cause management</h2>
        </div>

        <% include partials/sidemenu %>

        <div class="col-md-8 order-md-2">
            <h4 class="mb-3">Add resources</h4>
            <form class="form-horizontal" role="form" method="post" action="/create/resources">
                <% if (message.length > 0) { %>
                    <div class="alert alert-success col-sm-12">
                        <%= message %>
                    </div>
                    <% } %>

                    <div id="signupalert" style="display:none" class="alert alert-danger">
                        <p>Error:</p>
                        <span></span>
                    </div>

                    <div class="form-group">
                        <label for="first_name" class="col-md-3 control-label">Title</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="title" placeholder="Title">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="title" class="col-md-3 control-label">Select cause</label>
                        <div class="col-md-9">
                            <select class="form-control" name="cause" id="drpdwn">
                                <option value="">Select Cause</option>
                                <%for(var i=0;i< data.length;i++){ %>
                                    <option value='<%= data[i].ID %>' />
                                    <%=data[i].Title%>
                                        </option>
                                        <% }%>

                                        

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="last_name" class="col-md-3 control-label">Description</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="description" placeholder="Description">
                        </div>
                    </div>   

                    <div class="form-group">
                        <label for="last_name" class="col-md-3 control-label">Add reference urls</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="url1" placeholder="Reference url 1">
                        </div>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="url2" placeholder="Reference url 2">
                        </div>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="url3" placeholder="Reference url 3">
                        </div>
                    </div>   

                    <div class="form-group">
                        <!-- Button -->                                       
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-signup" type="submit" class="btn btn-primary"><i class="icon-hand-right"></i> &nbsp Submit</button>
                        </div>
                    </div>  
            </form>
        </div>
    </div>

    <% include partials/footer %>
</body>