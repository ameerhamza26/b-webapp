<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
                <div class="banner">
                    <div class="container">
                        <a href="/causes" class="float-left banner-link">
                            <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                        <a href="/causeedit" class="float-right banner-link">EDIT CAUSE</a>
                        <div class="py-5 text-center">
                            <h2 class="lead">Put an end to Immigration-related Crimes in Burma</h2>
                        </div>
                    </div>
                </div>
                <div class="container full-page">
                    <% include partials/sidemenu %>

                        <div class="col-md-8 order-md-2">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-12">
                                    <h4 class="mb-0 txt-red">Create Survey</h4>
                                </div>
                            </div>
                            <div class="form-horizontal">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <div id="signupalert" style="display:none" class="alert alert-danger">
                                            <p>Error:</p>
                                            <span></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input id="survey-title-text" type="text" class="form-control" name="title" placeholder="Title">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Select cause</label>
                                            <div class="col-md-9">
                                                <select class="form-control" name="causeId" id="survey-cause-id">

                                                    <%for(var i=0;i< data.length;i++){ %>
                                                        <option value='<%= data[i].ID %>'>
                                                            <%=data[i].Title%>
                                                        </option>
                                                        <% }%>



                                                </select>
                                            </div>
                                        </div>



                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                <button id="survey-submit" type="submit" class="btn btn-primary">
                                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                                            </div>
                                        </div>
                            </div>
                            <div id="survey-question-div">

                            </div>

                        </div>
                </div>
            </div>
            <% include partials/footer %>
    </body>