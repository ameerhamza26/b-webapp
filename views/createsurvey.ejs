<% include partials/head %>
<body>
    <% include partials/header %>
    
    <div class="container">
        <div class="py-5 text-center">
            <p class="lead mt-5">Welcome to Burma cause management</p>
        </div>

        <% include partials/sidemenu %>

        <div class="col-md-8 order-md-2">
            <h4 class="mb-3">Create Survey</h4>
            <div class="form-horizontal" >
                <% if (message.length > 0) { %>
                    <div class="alert alert-success col-sm-12">
                        <%= message %>
                    </div>
                    <% } %>
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-md-3 control-label">Title</label>
                            <div class="col-md-9">
                                <input id="survey-title-text" type="text" class="form-control" name="title" placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-md-3 control-label">Select cause</label>
                            <div class="col-md-9">
                                <select class="form-control" name="causeId" id="survey-cause-id">
                                    <option value="">Select Cause</option>
                                    <%for(var i=0;i< data.length;i++){ %>
                                        <option value='<%= data[i].ID %>' />
                                        <%=data[i].Title%>
                                            </option>
                                            <% }%>

                                            

                                </select>
                            </div>
                        </div>



                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                <button id="survey-submit" type="submit" class="btn btn-info">
                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                            </div>
                        </div>
                    </div>
                    <div id="survey-question-div" style="display: none;">
                        <% include partials/surveyquestions %>
                    </div>

        </div>
    </div>

    <% include partials/footer %>
</body>