<% include partials/head %>

    <body>
        <div>
            <div class="container full-page-outer">
                <div class="row justify-content-md-center">
                    <div id="loginbox" class="mainbox mt-5 col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h2>Sign Up</h2>
                                <!--<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>-->
                            </div>

                            <div style="padding-top:30px" class="panel-body">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-danger col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>

                                        <form class="form-horizontal" role="form" method="post" action="/signup" onSubmit="return checkblank(this);">
                                            <% if (message.length > 0) { %>
                                                <div class="alert alert-success col-sm-12">
                                                    <%= message %>
                                                </div>
                                                <% } %>
                                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                                        <p>Error:</p>
                                                        <span></span>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="first_name" class="col-md-3 control-label">First Name</label>
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" name="first_name" placeholder="First Name">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="last_name" class="col-md-3 control-label">Last Name</label>
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" name="last_name" placeholder="Last Name">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="mob_no" class="col-md-3 control-label">Mobile Number</label>
                                                        <div class="col-md-12">
                                                            <input type="number" class="form-control" name="mob_no" placeholder="Mobile Number">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="user_name" class="col-md-3 control-label">User Name</label>
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" name="user_name" placeholder="User Name">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="password" class="col-md-3 control-label">Password</label>
                                                        <div class="col-md-12">
                                                            <input type="password" class="form-control" name="password" placeholder="Password">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <!-- Button -->
                                                        <div class="col-md-12">
                                                            <button id="btn-signup" type="submit" class="btn btn-primary">
                                                                <i class="icon-hand-right"></i> &nbsp Sign Up</button>

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control">
                                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                                                Already have an account!
                                                                <a href="/login">
                                                                    Login Here
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>


                                        </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include partials/footer %>
    </body>

    </html>