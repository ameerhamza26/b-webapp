<% include partials/head %>

    <body>
        <% include partials/header %>
            <div>
            <div class="banner">
                    <div class="container">
                        <a href="/home" class="float-left banner-link">
                            <img src="../../svg/back.svg"> BACK TO CAUSES</a>
                        <a href="/causeedit" class="float-right banner-link">EDIT CAUSE</a>
                        <div class="py-5 text-center">
                            <h2 class="lead"><%=causes[0].Title%></h2>
                        </div>
                    </div>
                </div>
                <div class="container full-page">
                    <% var selectedCauseId= causes[0].ID; %>
                    <% include partials/sidemenu %>

                        <div class="col-md-8 order-md-2">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-8">
                                    <h4 class="mb-0 txt-red">Edit Talking Points</h4>
                                </div>
                            </div>
                            <form id="add-talking-form" onsubmit="return validateTalkingPointForm()" class="form-horizontal" role="form" method="post"
                                action="/talkingpoints/edit/<%=data[0].ID%>/<%= data[0].CauseId %>">
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-success col-sm-12">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <div id="signupalert" style="display:none" class="alert alert-danger">
                                            <p>Error:</p>
                                            <span></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Title</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" maxlength="99" name="title" value="<%= data[0].Title %>" placeholder="Title">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="title" class="col-md-3 control-label">Select cause</label>
                                            <div class="col-md-9">
                                                <select class="form-control" name="cause" id="drpdwn" value="<%= data[0].CauseId %>" readonly>
                                                    <option value="">Select Cause</option>
                                                    <%for(var i=0;i< causes.length;i++){ %>
                                                        <%if (causes[i].ID == data[0].CauseId) { %>
                                                            <option value='<%= causes[i].ID %>' selected />
                                                            <% } else {  %>

                                                                <option value='<%= causes[i].ID %>'>
                                                                    <% } %>
                                                                        <%=causes[i].Title%>
                                                                </option>
                                                                <% }%>


                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="notes" class="col-md-3 control-label">Description</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" maxlength="1999" name="description" placeholder="Description"><%= data[0].Description %></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                <button id="btn-signup" type="submit" class="btn btn-primary">
                                                    <i class="icon-hand-right"></i> &nbsp Submit</button>
                                            </div>
                                        </div>
                            </form>




                        </div>

                </div>
            </div>
            <% include partials/footer %>

    </body>